<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Withdraw.MobileFragment">

    <TextView
        android:id="@+id/coins_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:drawableEnd="@drawable/ic_bitcoin_24"
        android:drawableRight="@drawable/ic_bitcoin_24"
        android:drawablePadding="8dp"
        android:text="1oooo"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ELy"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/name_Et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Account Holder Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Account Holder Number"
            android:id="@+id/number_Et"/>

    </LinearLayout>

    <RadioGroup
        android:layout_below="@+id/ELy"
        android:id="@+id/radioGroup"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Mobile pay 50"
            android:id="@+id/phone25"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile pay 100 "
            android:textColor="@color/black"
            android:id="@+id/phone50"/>
    </RadioGroup>

    <Button
        android:id="@+id/submiBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#FFEB3B"
        android:minWidth="160dp"
        android:text="Withdraw"
        android:textColor="@color/black"
        android:textStyle="bold" />




</RelativeLayout>